@model Blog.Areas.Admin.ViewModels.NewUser

<h1>New User</h1>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(u => u.Username)
            @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Email)
            @Html.TextBoxFor(u => u.Email, new { @class = "form-control", type = "email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(u => u.Password)
            @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
        </div>

        @Html.Partial("_RoleEditor", Model.Roles)

        <div class="btn-toolbar">
            <input type="submit" value="Create User" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
        </div>
    }
</div>
