@using System.Web.Optimization

@{
    Layout = null;
}

@helper SelectedClass(string name)
{
    if (name == ViewBag.Selected)
    {
        <text>underline-text</text>
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <title>Blog - Admin</title>

    @Styles.Render("~/Admin/Styles")
</head>
<body>
    <div class="container">
        <nav id="header" class="navbar navbar-fixed-top">
            <div id="header-container" class="container navbar-container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="brand" class="navbar-brand" href="#">BLOG</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav mr-auto">
                        <li class="divider-vertical"></li>
                        <li>@Html.RouteLink("HOME", "Home", new { }, new { @class = SelectedClass("home") })</li>
                        <li><a href="#about">ABOUT</a></li>
                        <li><a href="#contact">CONTACT</a></li>
                        <li class="divider-vertical"></li>
                        <li>@Html.ActionLink("POSTS", "Index", "Posts", new { area = "admin" }, new { @class = SelectedClass("posts") })</li>
                        <li>@Html.ActionLink("USERS", "Index", "Users", new { area = "admin" }, new { @class = SelectedClass("users") })</li>
                    </ul>
                    <span class="navbar-text pull-right">
                        <i class="glyphicon glyphicon-user"></i>@User.Identity.Name | <a href="@Url.Action("logout")">Logout</a>
                    </span>
                </div>
            </div>
        </nav>
        @RenderBody()
    </div>

    @Scripts.Render("~/Admin/Scripts")
    @RenderSection("Scripts", false)

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>
