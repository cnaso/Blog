@using PagedList
@using PagedList.Mvc
@model PagedList<Blog.Core.Domain.Post>

@if (Model != null)
{
    foreach (var post in Model)
    {
        <article>
            <h2><a href="@Url.RouteUrl("Post", new { post.Id, post.Slug })">@post.Title</a></h2>
            <ul class="list-inline">
                <li>
                    <i class="glyphicon glyphicon-time"></i>
                    @(post.CreatedAt)
                </li>
                <li>
                    <i class="glyphicon glyphicon-user"></i>
                    @(post.User.Username)
                </li>
                <li>
                    <i class="glyphicon glyphicon-comment"></i>
                    No Comments
                </li>
            </ul>
            <div>
                @Html.Raw(post.Content)
            </div>
            <footer>
                <ul class="pull-right list-unstyled glyphicon glyphicon-tags">
                    @foreach (var tag in post.Tags)
                    {
                        <li>
                            @*<a class="badge" href="@Url.RouteUrl("Tag", new {tag.Id, tag.Slug})">@tag.Name</a> //TODO: implement tag routing*@
                            <a class="badge" href="#">@tag.Name</a>
                        </li>
                    }
                </ul>
                <a href="@Url.Action("#")" class="btn btn-style">Read More</a>
            </footer>
        </article>
        <hr />
    }
}

<div class="col-md-12">
    <div class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
    </div>
</div>